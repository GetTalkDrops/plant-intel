# ============================================================================
# Backend Environment Configuration
# Copy this file to .env and fill in your actual values
# ============================================================================

# ============================================================================
# Environment
# ============================================================================
ENVIRONMENT=development

# ============================================================================
# Database (Supabase)
# ============================================================================
SUPABASE_URL=your_supabase_project_url
SUPABASE_SERVICE_KEY=your_supabase_service_role_key
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/plantintel

# ============================================================================
# Authentication (Clerk)
# ============================================================================
CLERK_SECRET_KEY=your_clerk_secret_key
JWT_SECRET_KEY=your_random_jwt_secret_key_minimum_32_chars

# ============================================================================
# AI Services
# ============================================================================
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key

# ============================================================================
# Payment Processing (Stripe)
# ============================================================================
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# ============================================================================
# Redis (Caching + Celery)
# ============================================================================
REDIS_URL=redis://localhost:6379

# ============================================================================
# Security
# ============================================================================
ENCRYPTION_KEY=your_encryption_key_32_chars_for_aes256
RATE_LIMIT_PER_MINUTE=60
MAX_FILE_SIZE_MB=500

# ============================================================================
# CORS
# ============================================================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ============================================================================
# Logging
# ============================================================================
LOG_LEVEL=INFO
LOG_FILE_PATH=/app/logs/backend.log

# ============================================================================
# Analyzer Configuration Defaults
# ============================================================================
DEFAULT_LABOR_RATE_HOURLY=200
DEFAULT_SCRAP_COST_PER_UNIT=75
DEFAULT_VARIANCE_THRESHOLD_PCT=15
DEFAULT_MIN_VARIANCE_AMOUNT=1000
DEFAULT_PATTERN_MIN_ORDERS=3
