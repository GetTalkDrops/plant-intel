# ============================================================================
# Plant Intel Production Environment Template
# ============================================================================
# Copy this file to .env.production and fill in your production values
# NEVER commit .env.production to version control

# ============================================================================
# Application Settings
# ============================================================================
ENVIRONMENT=production
LOG_LEVEL=INFO
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ============================================================================
# Supabase (Database & Auth)
# ============================================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-key-here
SUPABASE_ANON_KEY=your-anon-key-here

# Frontend (Public keys)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# ============================================================================
# Clerk Authentication
# ============================================================================
CLERK_SECRET_KEY=sk_live_your-secret-key
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_live_your-publishable-key

# ============================================================================
# AI Services
# ============================================================================
# Anthropic Claude API
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# OpenAI API (optional fallback)
OPENAI_API_KEY=sk-your-openai-key-here

# ============================================================================
# Payment Processing (Stripe)
# ============================================================================
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key

# ============================================================================
# Security Keys
# ============================================================================
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=your-jwt-secret-32-chars-minimum
ENCRYPTION_KEY=your-encryption-key-32-chars-minimum

# ============================================================================
# Service Limits
# ============================================================================
RATE_LIMIT_PER_MINUTE=60
MAX_FILE_SIZE_MB=500

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_URL=redis://redis:6379

# ============================================================================
# Monitoring & Observability (Optional)
# ============================================================================
# SENTRY_DSN=https://your-sentry-dsn
# DATADOG_API_KEY=your-datadog-key
# NEW_RELIC_LICENSE_KEY=your-newrelic-key

# ============================================================================
# Email Service (Optional - for notifications)
# ============================================================================
# SENDGRID_API_KEY=your-sendgrid-key
# EMAIL_FROM=noreply@yourdomain.com
